  "dependencies": {
    "bluebird": "^3.5.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "gemini-core": "^2.9.0",
    "git-cli": "^0.10.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "npm-lifecycle": "^2.0.1",
    "pug": "2.0.0-beta11",
    "python": "0.0.4"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
