  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "assert": "^1.4.1",
    "autoprefixer": "7.2.x",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "gemini": "^5.6.2",
    "gh-pages": "^1.1.0",
    "gulp": "3.9.x",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-sass": "3.1.x",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglyfly": "^1.4.2",
    "hermione": "^0.65.2",
